<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />


    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="135dp"
        android:src="@drawable/movie_poster" />

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="145dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Avatar 2" />

    <TextView
        android:id="@+id/movie_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="175dp"
        android:textColor="@color/black"
        android:text="09:00 PM" />

    <TextView
        android:id="@+id/movie_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="175dp"
        android:textColor="@color/black"
        android:text=" 9 SEP 2022" />

    <TextView
        android:id="@+id/movie_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="195dp"
        android:textColor="@color/black"
        android:text="PVR MALL,Gurugram" />

    <TextView
        android:id="@+id/movie_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="215dp"
        android:textColor="@color/black"
        android:text="2 Tickets" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="180dp"
        android:textColor="@color/black"
        android:src="@drawable/ic_baseline_circle_24" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="122dp"
        android:textColor="@color/black"
        android:src="@drawable/ic_baseline_circle_24" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="234dp"
        android:textColor="@color/black"
        android:src="@drawable/ic_baseline_circle_24"/>

    <View
        android:layout_width="2dp"
        android:layout_height="91dp"
        android:background="#D9D9D6"
        android:layout_marginTop="144dp"
        android:layout_marginLeft="271dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>